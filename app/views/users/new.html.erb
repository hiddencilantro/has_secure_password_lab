<%= form_for @user do |f| %>
    <%= f.label :name, 'Username:' %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, 'Confirm password:' %>
    <%= f.password_field :password_confirmation %>
    
    <%= f.submit "Create new user" %>
<% end %>